{
  "name": "wholly",
  "private": true,
  "packageManager": "pnpm@9.15.4",
  "scripts": {
    "dev": "turbo run dev",
    "dev:web": "turbo run dev --filter=@wholly/web",
    "dev:mobile": "turbo run dev --filter=@wholly/mobile",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "clean": "turbo run clean && rm -rf node_modules"
  },
  "devDependencies": {
    "turbo": "^2.3.3",
    "typescript": "^5.7.3"
  },
  "pnpm": {
    "overrides": {
      "@types/react": "^19.0.8",
      "@types/react-dom": "^19.0.3"
    }
  }
}
